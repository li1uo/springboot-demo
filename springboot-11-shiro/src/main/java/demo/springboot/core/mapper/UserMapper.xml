<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="demo.springboot.core.mapper.UserMapper">

     <resultMap id="baseResultMap" type="demo.springboot.core.domain.vo.UserVO">
          <id property="userId" column="user_id"/>
          <result property="userName" column="user_name"/>
          <result property="userPassword" column="user_password"/>
          <result property="createTime" column="create_time"/>
          <result property="deleted" column="is_deleted"/>
     </resultMap>

     <sql id="baseSql">
          user_id,user_name,user_password,create_time,is_deleted
     </sql>

     <!-- 根据用户名获取用户信息 -->
     <select id="getUserByName" resultMap="baseResultMap" parameterType="string">
          select
          <include refid="baseSql"/>
          from t_user
          where user_name = #{userName}
     </select>
</mapper>